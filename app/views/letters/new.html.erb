<h1>New Letter</h1>

<%= form_for :letter, url: letters_path do |f| %>
  <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
  </p>
 
  <p>
      <%= f.label :text %>
      <%= f.text_area :text %>
  </p>
   
  <p>
      <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Home', controller: 'welcome'%>
<%= link_to 'Letters Wall', letters_path%>
