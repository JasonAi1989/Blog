<h1>Listing letters</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
    </tr>

    <% @letters.each do |letter| %>
        <tr>
            <td><%= letter.title %></td>
            <td><%= letter.text %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'New Letter', new_letter_path%>
